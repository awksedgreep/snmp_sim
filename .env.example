# SNMPSimEx Environment Configuration
# Copy this file to .env and modify as needed

# Core Settings
SNMP_SIM_EX_HOST=0.0.0.0
SNMP_SIM_EX_COMMUNITY=public
SNMP_SIM_EX_MAX_DEVICES=1000
SNMP_SIM_EX_MAX_MEMORY_MB=512

# Port Configuration
SNMP_SIM_EX_PORT_RANGE_START=30000
SNMP_SIM_EX_PORT_RANGE_END=35000

# Device Configuration (for simple env-based setup)
SNMP_SIM_EX_DEVICE_COUNT=100
SNMP_SIM_EX_WALK_FILE=priv/walks/cable_modem.walk

# Performance Settings
SNMP_SIM_EX_WORKER_POOL_SIZE=16
SNMP_SIM_EX_SOCKET_COUNT=4
SNMP_SIM_EX_IDLE_TIMEOUT_MS=1800000
SNMP_SIM_EX_CLEANUP_INTERVAL_MS=300000

# Monitoring and Telemetry
SNMP_SIM_EX_ENABLE_TELEMETRY=true
SNMP_SIM_EX_ENABLE_PERFORMANCE_MONITORING=true
SNMP_SIM_EX_HEALTH_PORT=4000
SNMP_SIM_EX_HEALTH_PATH=/health

# Performance Monitoring Thresholds
SNMP_SIM_EX_PERF_COLLECTION_INTERVAL_MS=30000
SNMP_SIM_EX_ALERT_MEMORY_THRESHOLD_MB=400
SNMP_SIM_EX_ALERT_CPU_THRESHOLD_PERCENT=80
SNMP_SIM_EX_ALERT_RESPONSE_TIME_MS=100
SNMP_SIM_EX_ALERT_ERROR_RATE_PERCENT=5.0

# Data Persistence
SNMP_SIM_EX_DATA_DIR=/app/data
SNMP_SIM_EX_PROFILE_CACHE_TTL_MS=3600000

# Logging
SNMP_SIM_EX_LOG_LEVEL=info
SNMP_SIM_EX_ENABLE_FILE_LOGGING=false
SNMP_SIM_EX_LOG_PATH=/app/data/logs/snmp_sim_ex.log

# Testing and Development Features
SNMP_SIM_EX_ENABLE_ERROR_INJECTION=false
SNMP_SIM_EX_DEFAULT_PACKET_LOSS_RATE=0.0
SNMP_SIM_EX_DEFAULT_TIMEOUT_RATE=0.0

# Configuration File (alternative to env vars)
# SNMP_SIM_EX_CONFIG_FILE=/app/config/devices.yaml

# Resource Management
SNMP_SIM_EX_CLEANUP_THRESHOLD_PERCENT=80
SNMP_SIM_EX_RESOURCE_MONITORING_INTERVAL_MS=60000

# Device Pool Configuration
SNMP_SIM_EX_TIER_PROMOTION_THRESHOLD=100
SNMP_SIM_EX_TIER_DEMOTION_THRESHOLD=10
SNMP_SIM_EX_CACHE_CLEANUP_INTERVAL_MS=300000